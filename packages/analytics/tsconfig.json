{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react",
    "lib": ["es2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src", "./test.setup.ts"],
  "exclude": ["node_modules", "dist"]
}
