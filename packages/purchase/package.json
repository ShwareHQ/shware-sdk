{
  "name": "@shware/purchase",
  "version": "1.5.4",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsup",
    "test": "vitest run",
    "check-types": "tsc --noEmit",
    "lint": "npx eslint . --fix --ext .js,.jsx,.ts,.tsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShwareHQ/shware-sdk.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.cjs"
    },
    "./app-store": {
      "types": "./dist/app-store/index.d.ts",
      "import": "./dist/app-store/index.mjs",
      "require": "./dist/app-store/index.cjs"
    },
    "./google-play": {
      "types": "./dist/google-play/index.d.ts",
      "import": "./dist/google-play/index.mjs",
      "require": "./dist/google-play/index.cjs"
    },
    "./stripe": {
      "types": "./dist/stripe/index.d.ts",
      "import": "./dist/stripe/index.mjs",
      "require": "./dist/stripe/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.10.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@shware/utils": "workspace:^",
    "ms": "^2.1.3",
    "zod": "^4.2.1"
  },
  "peerDependencies": {
    "stripe": "^20"
  },
  "peerDependenciesMeta": {
    "stripe": {
      "optional": true
    }
